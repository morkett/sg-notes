<% if (book) { %>
  <form method="post" action="/books/<%= book.id %>">
    <input type="hidden" name="_method" value="put">
      <input type="hidden" name="userId" value="<%= book.user %>">
      
    <label for='title'>Title</label>
    <input id="title" type="text" name="title" placeholder="Book Title" value="<%= book.title %>">
    <label for='author'>Author</label>
    <input  id="author" type="text" name="author" placeholder="Book Author" value="<%= book.author %>">


    <button>Update</button>
  </form>
<% } else { %>
  <em>Book not found. Soz.</em>
<% }

%>
