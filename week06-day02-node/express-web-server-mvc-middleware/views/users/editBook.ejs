<% if (user) { %>
  <form method="post" action="/books/<%= user.id %>">
    <input type="hidden" name="_method" value="put">
    <input type="text" name="title" placeholder="Book Title" value="<%= user.title %>">
    <input type="text" name="author" placeholder="Book Author" value="<%= user.author %>">
    <button>Update</button>
  </form>
<% } else { %>
  <em>User not found. Soz.</em>
<% } %>
